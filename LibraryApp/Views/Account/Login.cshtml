@model LibraryApp.Models.UserLoginModel

@{
    ViewBag.Title = "Login";
}

@if (ViewBag.LoginError is not null) {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Błąd!</strong>  @ViewBag.LoginError
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row justify-content-md-center">
    <div class="container col-md-5">
        <div class="card border-light-subtle shadow-sm">
            <div class="row g-0">
                <div class="col-12 col-md-12">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-5">
                                    <h3>Logowanie</h3>
                                </div>
                            </div>
                        </div>
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="row gy-3 gy-md-4 overflow-hidden">
                                <div class="col-12">
                                    @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "Nazwa" })
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "badge bg-danger" })
                                </div>
                                <div class="col-12">
                                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge bg-danger" })
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <input type="submit" name="submit" class="btn btn-primary" value="Zaloguj" />
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="row">
                            <div class="col-12">
                                <hr class="mt-5 mb-4 border-secondary-subtle">
                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                    <a asp-area="" asp-controller="Account" asp-action="Register" class="link-secondary text-decoration-none">Stwórz nowe konto</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>